<div class="container  border-1px  background-white" style="margin-top: 25px;">
  <div class="row  background-white" >
    <a href="/dashboard" class=" go-back mr-auto" style="margin-left: 10px;"> Go Back</a>
  </div>
  
  <h2 class="postTitle mt-5  background-white">Edit Post</h2><hr>
  <form class="edit-post-form   background-white">
  <div class="form-group">
    <label for="post-postTitle">Post postTitle:</label>
    <input type="text" class="form-control input" name="post-postTitle" value="{{post.postTitle}}"  >
  </div>
  <div class="form-group">
    <label for="post-content">Post Content:</label>
    <input type="textarea" class="form-control text-area" value="{{post.postContent}}" name="post-content" >
  </div>
  
    <div class="form-group">
       Created by you on {{format_date post.created_at}}
      |
      <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
    </div>
    <div class="form-group">
  <button type="submit" class="btn btn-primary">Update Post</button>
  <button type="button" class="btn btn-danger delete-post-btn">Delete Post</button>
  </div>
</form>
  
</div>

{{> comments post.comments}}

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>
